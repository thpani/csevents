div(ng-include='"components/navbar/navbar.html"')
.container
  ui-view

    p
      button.btn.btn-default(ui-sref="eventseries.new")
        span.glyphicon.glyphicon-plus
        |  Add new event series

    ul.list-group

      li.list-group-item(ng-repeat='event in eventseries')
        .row
          .col-sm-11
            p
              span.lead
                strong {{ event.name }} 
              a(ui-sref="eventseries.detail({ id: event._id })")
                i.fa.fa-calendar
            p {{ event.info }}
          .col-sm-1
            a(ui-sref='eventseries.edit({ id: event._id })')
              span.glyphicon.glyphicon-pencil
            br
            a.trash(ng-click='delete(event)')
              span.glyphicon.glyphicon-trash
      
      li.list-group-item(ng-if='eventseries.length == 0')
        strong Sorry, no event series for you :(
